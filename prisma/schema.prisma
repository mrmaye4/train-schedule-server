generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        BigInt             @id @default(autoincrement())
  name      String
  role      Role               @default(USER)
  login     String
  password  String
  createdAt DateTime           @default(now())
  favorites FavoriteSchedule[]
}

enum Role {
  USER
  ADMIN
}

model Train {
  id        BigInt     @id @default(autoincrement())
  name      String
  type      TrainType
  createdAt DateTime   @default(now())
  schedules Schedule[]

  @@index([type])
}

enum TrainType {
  HIGH_SPEED
  EXPRESS
  INTERCITY
  REGIONAL
  COMMUTER
  FREIGHT
}

model Schedule {
  id        BigInt             @id @default(autoincrement())
  trainId   BigInt
  createdAt DateTime           @default(now())
  train     Train              @relation(fields: [trainId], references: [id])
  points    SchedulePoint[]
  favorites FavoriteSchedule[]
}

model FavoriteSchedule {
  id         BigInt   @id @default(autoincrement())
  userId     BigInt
  scheduleId BigInt
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  schedule   Schedule @relation(fields: [scheduleId], references: [id])

  @@unique([userId, scheduleId])
}

model Place {
  id             BigInt          @id @default(autoincrement())
  name           String
  createdAt      DateTime        @default(now())
  schedulePoints SchedulePoint[]

  @@index([name])
}

model SchedulePoint {
  id           BigInt   @id @default(autoincrement())
  timeToArrive DateTime
  placeId      BigInt
  scheduleId   BigInt
  createdAt    DateTime @default(now())
  place        Place    @relation(fields: [placeId], references: [id])
  schedule     Schedule @relation(fields: [scheduleId], references: [id])

  @@index([timeToArrive])
  @@index([placeId])
  @@index([scheduleId])
}
