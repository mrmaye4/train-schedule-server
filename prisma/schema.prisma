generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int                @id @default(autoincrement())
  name         String
  role         Role               @default(USER)
  login        String             @unique
  password     String
  refreshToken String?
  createdAt    DateTime           @default(now())
  favorites    FavoriteSchedule[]
}

enum Role {
  USER
  ADMIN
}

enum TrainType {
  HIGH_SPEED
  EXPRESS
  INTERCITY
  REGIONAL
  COMMUTER
  FREIGHT
}

model Schedule {
  id        Int                @id @default(autoincrement())
  type      TrainType
  createdAt DateTime           @default(now())
  points    SchedulePoint[]
  favorites FavoriteSchedule[]

  @@index([type])
}

model SchedulePoint {
  id           Int      @id @default(autoincrement())
  timeToArrive DateTime
  placeId      Int
  scheduleId   Int
  createdAt    DateTime @default(now())
  place        Place    @relation(fields: [placeId], references: [id])
  schedule     Schedule @relation(fields: [scheduleId], references: [id])

  @@index([timeToArrive])
  @@index([placeId])
  @@index([scheduleId])
}

model Place {
  id             Int             @id @default(autoincrement())
  name           String          @unique
  createdAt      DateTime        @default(now())
  schedulePoints SchedulePoint[]

  @@index([name])
}

model FavoriteSchedule {
  id         Int      @id @default(autoincrement())
  userId     Int
  scheduleId Int
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  schedule   Schedule @relation(fields: [scheduleId], references: [id])

  @@unique([userId, scheduleId])
}
